source "https://rubygems.org"

gem "jekyll", "~> 3.10.0" # You can specify a specific version or use "~> 4.2" for the latest 4.x version
gem "jekyll-feed"       # Adds an RSS feed to your site
gem "jekyll-seo-tag"    # Provides SEO-friendly meta tags
gem "jekyll-paginate"   # Adds pagination support
gem "jekyll-sitemap"     # Generates a sitemap.xml
gem "github-pages"       # For GitHub Pages compatibility
gem "redcarpet"          # For enhanced Markdown support (if needed)
gem "jekyll-assets"      # For managing assets (CSS/JS) more easily
